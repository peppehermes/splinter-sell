<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/detail_view"
    android:fillViewport="true">


    <RelativeLayout
        android:id="@+id/detail_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/detail_image"
            android:src="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/select_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/detail_image"
            android:layout_alignEnd="@+id/detail_image"
            android:background="@drawable/round_corners"
            android:contentDescription="@string/select_image"
            android:padding="10dp"
            android:src="@drawable/ic_photo_camera_white_24dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/detail_image"
            android:background="@drawable/round_corners"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/detail_image"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/title"
                android:importantForAutofill="no"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:importantForAutofill="no"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:padding="10dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/price"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/category"
                android:importantForAutofill="no"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:padding="10dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/location"
                android:importantForAutofill="no"
                android:inputType="textAutoCorrect|textAutoComplete|textPostalAddress"
                android:padding="10dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/expire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/expire_date"
                android:focusable="false"
                android:padding="10dp"
                android:textSize="24sp"/>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>


