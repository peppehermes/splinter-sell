<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_item_list">

    <fragment
        android:id="@+id/nav_gallery"
        android:name="it.polito.mad.splintersell.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="it.polito.mad.splintersell.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_item_details"
        android:name="it.polito.mad.splintersell.ui.item_details.ItemDetailsFragment"
        android:label="@string/menu_item_details"
        tools:layout="@layout/fragment_item_details" >
        <action
            android:id="@+id/action_nav_item_details_to_nav_item_list"
            app:destination="@id/nav_item_list" />
    </fragment>
    <fragment
        android:id="@+id/nav_item_list"
        android:name="it.polito.mad.splintersell.ui.item_list.ItemListFragment"
        android:label="@string/menu_item_list"
        tools:layout="@layout/fragment_item_list" />
</navigation>